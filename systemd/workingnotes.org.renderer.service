[Unit]
Description=Editors' Notes renderer node server for workingnotes.org
BindsTo=workingnotes.org.target

[Service]
ExecStart=/usr/bin/node /usr/local/projects/workingnotes.org/renderer/releases/current/src/server
Restart=always

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=workingnotes.org.renderer

Environment= "EDITORSNOTES_API_URL=http://workingnotes.org" "EDITORSNOTES_CLIENT_PORT=15025"

[Install]
WantedBy=multi-user.target